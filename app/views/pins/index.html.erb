<% @title = 'Pins - Corkboard' %>

<h1>Listing Pins</h1>

<div class="row">
  <% @pins.each do |pin| %>
  <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
    <%= link_to pin do %>
      <div class="card">
        <%= image_tag pin.thumbnail.url, class: 'card-img-top' if pin.thumbnail.exists? %>
        <div class="card-body">
          <%= pin.description %>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>

